<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="/style/P1_style.css">
    <title>Restaurant</title>
</head>
<body>

    <% 
    if(userId){
      %>

    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img class="" src="/images/Logo.png" alt="" width="52" height="52">
          <span class="title">Restaurant</span>
        </a>
        <form class="d-flex" method="POST" action="/logout">
          <button class="btn btn-dark nav-link ms-3 logout">Logout</button>
        </form>
      </div>
    </nav>

    <% 
    }
    else{
      %>

    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="">
          <img class="" src="/images/Logo.png" alt="" width="52" height="52">
          <span class="title">Restaurant</span>
        </a>
        <form class="d-flex">
          <a class="nav-link ms-3 logout" href="javascript:poplogin()">Login</a>
          <a class="nav-link logout" href="javascript:popsignup()">Sign Up</a>
        </form>
      </div>
    </nav>

    <% } %>

    <% 
    if(error) { 
      %>

    <div class="error">
      <%= error %>
    </div>

    <% } %>

    <div class="pop">

      <div class="signupform">
        <div class="form-group mb-4">
          <h3 class="signup-inline">Signup</h3>
          <img class="img signup-inline" src="/images/close_black.png" alt="" onclick="closewindow()">
        </div>
        <form method="POST" action="/">
          <div class="form-group mb-2">
            <label for="registernum">Phone Number</label>
            <input name="registernum" type="tel" pattern="[0-9]{10-12}" minlength="10" maxlength="12" class="form-control" required>
          </div>
          <div class="form-group mb-2">
            <label for="registerpass">Password</label>
            <input name="registerpass" type="password" class="form-control" required>
          </div>
          <div class="checkbox">
            <input type="checkbox" name="terms" class="me-2" required>
            <label for="terms" id="size-sm">I agree to the following: Privacy Policy and Terms of Service</label>
          </div>
          <button name="register" class="btn btn-primary w-100 mt-3">Signup</button>
        </form>
        <hr>
        <p>Already have an account? <a href="javascript:closewindow();poplogin();">Login</a></p>
      </div>

      <div class="loginform">
        <div class="form-group mb-4">
          <h3 class="signup-inline">Login</h3>
          <img class="img signup-inline" src="/images/close_black.png" alt="" onclick="closewindow()">
        </div>
        <form method="POST" action="/">
          <div class="form-group mb-2">
            <label for="loginnum">Phone Number</label>
            <input name="loginnum" type="tel" pattern="[0-9]{10-12}" minlength="10" maxlength="12" class="form-control" required>
          </div>
          <div class="form-group mb-2">
            <label for="loginpass">Password</label>
            <input name="loginpass" type="password" class="form-control" required>
          </div>
          <button name="login" class="btn btn-primary w-100 mt-3">Login</button>
        </form>
        <hr>
        <p>New to Restaurant? <a href="javascript:closewindow();popsignup();">Create account</a></p>
      </div>

    </div>

    <div id="carouselControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active" name="slide1">
          <img src="/images/Img1.jpg" class="d-block w-100" alt="FIrst Slide">
        </div>
        <div class="carousel-item" name="slide2">
          <img src="/images/Img2.jpg" class="d-block w-100" alt="Second Slide">
        </div>
        <div class="carousel-item" name="slide3">
          <img src="/images/Img3.jpg" class="d-block w-100" alt="Third Slide">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"  data-bs-slide="prev" onclick="prevslide()">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden" name="prev">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"  data-bs-slide="next" onclick="nextslide()">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden" name="next">Next</span>
      </button>
    </div>

    <div class='body'>
      <h1 id="title">MENU</h1>
      <div class="flex">

        <% categories.forEach(categ => { %>

        <div class="card">
          <a class="link" href="/menu/<%= categ.category %>">
            <img src="/images/<%= categ.image %>" class="card-img-top" alt="...">
            <h5 class="card-body"><%= categ.category %></h5>
          </a>
        </div>
        
        <% }) %>

      </div>

    </div>

    <div class="foot">
      <div class="left-foot">
        <p>Contact Us</p>
        <p>Locations</p>
        <p>About Us</p>
      </div>
      <div class='right-foot'>
        <img src="../images/androidAppImg.png" alt="" width="160" height="105">
        <img src="../images/iosAppImg.png" alt="" width="160" height="105">
      </div>
    </div>

    <script type="text/javascript" src="/script/P1_script.js"></script>
    
</body>
</html>